<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    tools:context=".mypagefragment.DriverCarImgFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:fontFamily="@font/fontbold"

                android:gravity="center"
                android:text="한풀"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loadSearch_btn"
                android:fontFamily="@font/fontbold"

                android:gravity="right"
                android:text="드라이버등록"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:fontFamily="@font/fontbold"
            android:layout_gravity="center"
            android:text="3. 차량사진을 등록해주세요."
            android:textSize="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/carImg1"
                android:layout_width="100dp"
                android:layout_height="120sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/car_foreground"
                />

            <ImageView
                android:id="@+id/carImg2"
                android:layout_width="100dp"
                android:layout_height="120sp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/car_foreground"
                />
            <ImageView
                android:id="@+id/carImg3"
                android:layout_width="100dp"
                android:layout_height="120sp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/car_foreground"
                />


        </LinearLayout>

        <Button
            android:id="@+id/carImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="사진넣기"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|bold"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|bold"
            android:text="완료"
            android:layout_gravity="center"

            />

    </LinearLayout>

</LinearLayout>