<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FBFBFB"
    tools:context=".mypagefragment.MyPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_weight="2">

        <TextView
            android:id="@+id/txtNickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="닉네임"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imguser"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-15dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/circle"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:civ_border_overlay="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="로그아웃"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>
            <Button
                android:id="@+id/revokeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="회원 탈퇴"
                android:textColor="@color/black"
                android:layout_marginLeft="210dp"/>


            <ImageView
                android:id="@+id/level"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/level" />

            <TextView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv."
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_below="@+id/level"
                android:layout_marginLeft="110dp"/>

            <TextView
                android:id="@+id/leveltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv."
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_below="@+id/level"
                android:layout_alignRight="@+id/level"/>

            <ImageView
                android:id="@+id/license"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/driver" />

            <TextView
                android:id="@+id/drivertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="드라이버 등록"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_below="@+id/license"
                android:layout_alignLeft="@+id/license"/>


            <ImageView
                android:id="@+id/history"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/history" />

            <TextView
                android:id="@+id/historytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카풀 내역"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_below="@+id/history"
                android:layout_alignLeft="@+id/history"/>

            <ImageView
                android:id="@+id/editProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/editprofile" />

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/license"
                android:layout_alignLeft="@+id/license"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="-48dp"
                android:text="프로필 설정"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/date"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:src="@drawable/schedule" />

            <TextView
                android:id="@+id/calendertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카풀 일정"
                android:textColor="#000000"

                android:textSize="16sp"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/calendertxt"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/intro_splash" />

        </RelativeLayout>

    </LinearLayout>




</LinearLayout>