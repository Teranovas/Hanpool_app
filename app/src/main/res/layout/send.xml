<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="15dp">

        <TextView
            android:padding="5dp"
            android:id="@+id/send_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/fontbold"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/message_bg_self"
            android:layout_alignBaseline="@+id/senderImage"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/senderImage"
            android:layout_below="@+id/senderName"
            android:text="보내는 메시지" />

        <TextView
            android:id="@+id/senderName"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontbold"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/senderImage"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeSender"
            android:text="시간"
            android:fontFamily="@font/fontbold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toLeftOf="@+id/senderImage"
            android:layout_below="@+id/send_message_text"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/senderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <Button
        android:id="@+id/accept_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeSender"
        android:layout_toLeftOf="@+id/senderImage"
        android:layout_marginTop="-3dp"
        android:text="수락" />



</RelativeLayout>