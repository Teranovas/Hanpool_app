<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/dottedLineImageView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:src="@drawable/line3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/circle"
        android:layout_below="@id/dottedLineImageView"
        android:scaleType="centerCrop"
        android:src="@drawable/user"

        app:civ_border_overlay="true" />

    <TextView
        android:id="@+id/chatUserView"
        android:layout_toRightOf="@+id/userImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/dottedLineImageView"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:padding="6dp" />






</RelativeLayout>
