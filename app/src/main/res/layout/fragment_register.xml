<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".communityfragment.RegisterFragment">

    <Button
        android:id="@+id/taxi_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="택시카풀"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/after_Btn" />

    <Button
        android:id="@+id/after_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="집으로"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/before_Btn" />

    <Button
        android:id="@+id/before_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="학교로"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_et" />




    <EditText
        android:id="@+id/title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="12"
        android:hint="제목"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleText" />


    <TextView
        android:id="@+id/TitleText"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="제목을 입력해주세요."
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        android:textSize="43sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />


</androidx.constraintlayout.widget.ConstraintLayout>