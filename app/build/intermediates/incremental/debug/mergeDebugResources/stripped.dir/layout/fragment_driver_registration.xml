<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mypagefragment.DriverRegistrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="드라이버 등록"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="20"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40sp"
            android:text="1. 면허증 사진을 등록해주세요"
            android:textColor="@color/black"
            android:layout_margin="40sp"
            android:textAlignment="center"
            android:textSize="25dp"

            />

        <ImageView
            android:id="@+id/driverLicenseImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/driverlicense"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/driverLicenseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="면허증 사진 저장"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="다음"
            android:layout_gravity="center"

            />

    </LinearLayout>

</LinearLayout>